<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import edu.wpi.punchy_pegasi.frontend.components.PFXButton?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="edu.wpi.punchy_pegasi.frontend.controllers.requests.adminPage.AdminAlertPageController"
            fx:id="container">
    <center>
        <VBox alignment="TOP_CENTER" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS" styleClass="admin-container-parent">
            <Label styleClass="admin-container-text-size" text="Alerts Page" VBox.vgrow="ALWAYS"/>
            <HBox spacing="10.0" alignment="CENTER" HBox.hgrow="ALWAYS">
                <VBox alignment="CENTER" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS" styleClass="admin-container-parent">
                    <Label styleClass="admin-container-text-size" text="Create Alert" VBox.vgrow="ALWAYS"/>
                    <VBox alignment="CENTER" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS" styleClass="admin-container" fx:id="alertsContainer">
                        <TextField promptText="Alert title" fx:id="alertTitle"/>
                        <TextField promptText="Alert description" fx:id="alertDescription"/>
                        <HBox spacing="10.0" alignment="CENTER" HBox.hgrow="ALWAYS">
                            <PFXButton styleClass="admin-container-buttons" text="Send" fx:id="sendButton"/>
                            <PFXButton styleClass="admin-container-buttons-remove"  text="Remove" fx:id="removeButton"/>
                        </HBox>
                    </VBox>
                </VBox>
                <VBox alignment="CENTER" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                    <Label styleClass="admin-container-text-size" text="Active Alerts" VBox.vgrow="ALWAYS"/>
                    <ScrollPane styleClass= "admin-container" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                        <VBox alignment="CENTER" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS" fx:id="activeAlertsContainer">
                        </VBox>
                    </ScrollPane>
                </VBox>
            </HBox>
        </VBox>
    </center>

</BorderPane>