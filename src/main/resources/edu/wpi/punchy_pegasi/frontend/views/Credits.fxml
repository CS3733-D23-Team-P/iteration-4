<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.text.TextFlow?>
<?import javafx.scene.text.Text?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="edu.wpi.punchy_pegasi.frontend.controllers.CreditsController"
            prefHeight="400.0" prefWidth="600.0">
    <top>
        <VBox alignment="CENTER_LEFT" style="-fx-background-color: #F1F1F1" spacing="10">
            <children>
                <VBox style="-fx-background-color: -pfx-background" spacing="10">
                    <Label text="CREDITS" styleClass="info-title"/>
                    <TextFlow styleClass="info-text">
                        <Text>
                            APIs, icons, images, and other components used by Team Punchy Pegasi to develop this Application
                        </Text>
                    </TextFlow>
                </VBox>
                <VBox style="-fx-background-color: -pfx-background" spacing="10">
                    <Label text="RESOURCES" styleClass="info-title"/>
                    <GridPane fx:id="sourceGrid" styleClass="info-credit-list">
                        <Label alignment="CENTER_LEFT" text="Resource" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-weight: 900;"/>
                        <Label alignment="CENTER_LEFT" text="Description" GridPane.columnIndex="1" GridPane.rowIndex="0" style="-fx-font-weight: 900;"/>
                        <Label alignment="CENTER_RIGHT" text="Link" GridPane.columnIndex="2" GridPane.rowIndex="0" style="-fx-font-weight: 900;"/>
                    </GridPane>
                </VBox>
            </children>
        </VBox>
    </top>
</BorderPane>

